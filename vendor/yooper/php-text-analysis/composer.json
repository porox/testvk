{
    "name": "yooper/php-text-analysis",
    "description": "PHP Text Analysis is a library for performing Information Retrieval (IR) and Natural Language Processing (NLP) tasks using the PHP language",
    "keywords": ["nlp","ir","text analysis","natural language processing"],
    "license": "Apache 2",
    "authors": [
    {
        "name": "yooper",
        "email" : "dcardin2007@gmail.com"
    }
    ],
    "autoload": {
        "psr-4": {
            "TextAnalysis\\": "src/"
	},
        "files": ["src/helpers/storage.php", "src/helpers/print.php", "src/helpers/simplified.php"]
    },
    "autoload-dev": {
        "files": ["tests/TestBaseCase.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "require" : {
        "php": ">=5.5",
        "yooper/stop-words": "^1.0",
        "symfony/console": ">=2.7",
        "camspiers/porter-stemmer": "1.0.*",
        "wamania/php-stemmer": "1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "mockery/mockery" : "0.9.7"
    }
}
